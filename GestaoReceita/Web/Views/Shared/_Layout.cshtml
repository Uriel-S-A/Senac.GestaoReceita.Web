<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary fixed-top">
        <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarTogglerDemo03" aria-controls="navbarTogglerDemo03" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <a class="navbar-brand" href="#">Gestão de Receitas</a>
            <div class="collapse navbar-collapse" id="navbarTogglerDemo03">

                @*será feito um combobox com as três telas feitas*@
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>        
                    <div class="dropdown">
                        <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Cadastros de Origem
                        </button>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Pais", "Index", "Pais", new { area = "" }, new { @class = "dropdown-item" })</li>
                            <li>@Html.ActionLink("Estado", "Index", "Estado", new { area = "" }, new { @class = "dropdown-item" })</li>
                            <li>@Html.ActionLink("Cidade", "Index", "Cidade", new { area = "" }, new { @class = "dropdown-item" })</li>
                        </ul>
                    </div>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
    </div>
    <footer class="fixed-bottom">
        <div class="container">
            <p>&copy; @DateTime.Now.Year - Senac/RS Turma info 9</p>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
