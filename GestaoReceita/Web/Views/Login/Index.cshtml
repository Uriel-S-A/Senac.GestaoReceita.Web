@model Web.Models.Usuarios.LoginUsuario

@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
    ViewBag.Title = "Home Page";
}
<link href="https://getbootstrap.com/docs/5.3/assets/css/docs.css" rel="stylesheet">

<div class="d-flex align-items-center justify-content-center flex-column">
    @using (Html.BeginForm("Login", "Login", FormMethod.Post))
    {
        <div class="p-4 mb-2 bg-info text-dark ">
            <div class="row">
                <div class="col-md-12">
                    @Html.LabelFor(m => m.Username)
                    @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-12">
                    @Html.LabelFor(m => m.Password)
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                </div>
            </div>
            <br />
            <br />
            <div class="row">
                <div class="grid text-center" style="--bs-columns: 4; --bs-gap: 5rem;">
                    <div class="g-col-2">
                        <input type="submit" value="sing in" class="btn btn-primary" />
                    </div>
                    <div class="g-col-2">
                        @Html.ActionLink("Sing up", "Cadastro", "Login", new { areas = "" }, new { @class = "btn btn-secondary" })
                    </div>
                </div>
                <div class="p-2 m-0 border-0 bd-example m-0 border-0">
                    <select class="position-fixed bottom-0 end-0 p-2"
                            aria-label="Default select example">

                        <option value="1">Modo Escuro</option>

                        <option value="2">Modo Claro</option>
                    </select>
                </div>

            </div>
        </div>
    }
    @if (!string.IsNullOrEmpty(this.Model.mensagemErroAutenticacao))
    {
        <div class="row">
            <div class="col">
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <strong>Erro!</strong> @this.Model.mensagemErroAutenticacao.
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
        </div>
    }
    @if (!string.IsNullOrEmpty(this.Model.mensagemSucesso))
    {
        <div class="row">
            <div class="col">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @this.Model.mensagemSucesso.
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
        </div>
    }
</div>