
@{
    ViewBag.Title = "CadastrarPais";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    @*jquery*@
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    @*alerta*@
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    @*rotas*@
    <script src="~/Scripts/Pais/script.js"></script>
    <link rel="stylesheet" href="~/Content/Pais/style.css" />
</head>

<body>
    <div class="container my-3">

        @*modal create*@
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">

                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="exampleModalLabel">Cadastrar País</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>

                    <div class="modal-body">
                        <form id="myForm">
                            <div class="row">
                                <div class="mb-3 col">
                                    <label for="recipient-name" class="col-form-label">País:</label>
                                    <input type="text" class="form-control" id="pais-nome">
                                </div>                                
                            </div>
                        </form>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="button" class="btn btn-primary" id="createBtn">Update</button>
                    </div>

                </div>
            </div>
        </div>

        @*modal update*@

        <div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">

                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="exampleModalLabel">Editar País</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>

                    <div class="modal-body">
                        <form id="myForm">
                            <div class="row">
                                <div class="mb-3 col">
                                    <label for="recipient-name" class="col-form-label">País:</label>
                                    <input type="text" class="form-control" id="pais-nome-update">
                                </div>
                            </div>
                        </form>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="button" class="btn btn-primary" id="updateBtn">Update</button>
                    </div>

                </div>
            </div>
        </div>

        @*modal delete*@
        <div class="modal fade" id="confirmModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">

                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="exampleModalLabel">Confirmação de Exclusão</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>

                    <div class="modal-body">
                        Tem certeza de que deseja excluir este registro de Pais?
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="button" class="btn btn-danger" id="btnConfirmDelete">Excluir</button>
                    </div>

                </div>
            </div>
        </div>

        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">Novo Registro</button>           
        <table class="table">
            <thead>
                <tr>
                    <th scope="col" class="d-none">Id</th>
                    <th scope="col">Nome</th>                    
                    <th scope="col" class="text-center">Ações</th>
                </tr>
            </thead>
            <tbody class="pais-info">
                @foreach (var pais in Model)
                {
                    <tr>                        
                        <td class="d-none paisId">@pais.id</td>
                        <td class="paisNome">@pais.descricaoPais</td>                        
                        <td class="text-center">
                            <button class="btn btn-primary btn-modal-edit" data-bs-toggle="modal" data-bs-target="#editModal">Editar</button>
                            <button class="btn btn-danger btn-modal-delete" data-bs-toggle="modal" data-bs-target="#confirmModal">Deletar</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>      
    </div>
</body>


